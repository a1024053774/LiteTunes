<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:gravity="center_horizontal"
            android:src="@drawable/music_blank_space" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/play" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stop" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/service_button_start"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="绑定服务"/>

        <Button
            android:id="@+id/service_button_stop"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="解绑服务" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/binderservice_button_start"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="绑定binder服务"/>
        <Button
            android:id="@+id/binderservice_button_stop"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:text="解绑binder服务"/>
    </LinearLayout>


</LinearLayout>
